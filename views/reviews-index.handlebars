<h1>All Reviews</h1>

<a href="/reviews/new">New Review</a>

<div class="row">
    {{#each reviews}}
    <div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
        <div class="col-md-3">
            <a href="/reviews/{{this._id}}" style="text-decoration: none;">
            <div><small>{{this.author.username}}</small></div>
            <h2 style="color: rgb(25, 185, 185);">{{this.title}}</a> | 
            <i style="color: rgb(43, 179, 31);">{{this.movieTitle}}</i></h2>
            <small>{{this.description}}</small>
        </div>
    {{/each}}
</div>
